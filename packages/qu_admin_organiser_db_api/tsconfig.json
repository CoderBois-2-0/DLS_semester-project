{
    "compilerOptions": {
        "declaration": true,
        "target": "ESNext",
        "module": "ES2022",
        "moduleResolution": "bundler",
        "strict": true,
        "verbatimModuleSyntax": true,
        "skipLibCheck": true,
        "types": ["node"],
        "outDir": "./dist"
    },
    "include": ["lib/**/*"],
    "exclude": ["node_modules"]
}
